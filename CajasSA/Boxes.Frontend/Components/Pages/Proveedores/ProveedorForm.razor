﻿<EditForm EditContext="editContext" OnValidSubmit="OnValidSubmit" @key="Employee?.Id">
    <DataAnnotationsValidator />
    <MudTextField Label="Empleado"
                  @bind-Value="Employee.FirstName"
                  For="@(() => Employee.FirstName)"
                  Class="mb-4" />

    <MudTextField Label="Apellido"
                  @bind-Value="Employee.LastName"
                  For="@(() => Employee.LastName)"
                  Class="mb-4" />

    <MudNumericField T="decimal" Label="Salario"
                     @bind-Value="Employee.Salary"
                     For="@(() => Employee.Salary)"
                     Class="mb-4" />

    <MudTextField Label="Fecha Contratacion"
                  @bind-Value="Employee.HireDate"
                  For="@(() => Employee.HireDate)"
                  Class="mb-4" />

    <MudSelect T="bool" Label="Activo" @bind-Value="Employee.IsActive" Class="mb-4">
        <MudSelectItem Value="true">Sí</MudSelectItem>
        <MudSelectItem Value="false">No</MudSelectItem>
    </MudSelect>

    <MudButton Variant="Variant.Outlined"
               StartIcon="@Icons.Material.Filled.ArrowBack"
               Color="Color.Info"
               OnClick="ReturnAction">
        <MudHidden xs="true">
            Cancelar
        </MudHidden>
    </MudButton>

    <MudButton Variant="Variant.Outlined"
               StartIcon="@Icons.Material.Filled.ArrowBack"
               Color="Color.Info"
               OnClick="ReturnAction">
        <MudHidden xs="true">
            Cancelar
        </MudHidden>
    </MudButton>

    <MudButton Variant="Variant.Outlined"
               StartIcon="@Icons.Material.Filled.Check"
               Color="Color.Primary"
               ButtonType="ButtonType.Submit">
        <MudHidden xs="true">
            Guardar Cambios
        </MudHidden>
    </MudButton>
</EditForm>